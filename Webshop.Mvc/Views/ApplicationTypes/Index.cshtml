@model IEnumerable<ApplicationType>

@{
    ViewData["Title"] = "Application types";
    ViewData["SubTitle"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application list</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create new application type</a>
        </div>

    </div>
    <br />
    <br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Application type name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var applicationType in Model)
                {
                    <tr>
                        <td width="50%">@applicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-Id="@applicationType.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@applicationType.Id"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
       <p>No applicaiton type exists</p>
    }
</div>