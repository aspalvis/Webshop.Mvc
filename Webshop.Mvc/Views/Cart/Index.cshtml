@using Utility
@model IList<Product>

@{
    ViewData["Title"] = "Cart";
    ViewData["SubTitle"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";

    double orderTotal = 0;
}

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <div class="col-12 col-lg-3">
                                        Product Details
                                    </div>
                                }
                                else
                                {
                                    <div class="col-12 col-lg-7">
                                        Product Details
                                    </div>
                                }
                                <div class="col-12 col-lg-2">
                                    Price per sqft
                                </div>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <div class="col-6 col-lg-2">Sqft</div>
                                    <div class="col-6 col-lg-2">Total Price</div>
                                }
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <input asp-for="@Model[i].Id" hidden />
                            <div class="row h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@WC.ImagePath@Model[i].Image" class="rounded" width="100%" />
                                </div>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <div class="col-8 col-lg-3">
                                        <h5>@Model[i].Name</h5>
                                        <div style="font-size:11px;">@Model[i].ShortDescription</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-8 col-lg-7">
                                        <h5>@Model[i].Name</h5>
                                        <div style="font-size:11px;">@Model[i].ShortDescription</div>
                                    </div>
                                }
                                <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;"> $@Model[i].Price</span>/ sqft

                                </div>

                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <div class="col-4 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <input asp-for="@Model[i].TempSqFt" class="form-control" />
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> $@(Model[i].Price * Model[i].TempSqFt)</span>

                                    </div>
                                }
                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                    <a class="btn btn-outline-danger" asp-action="Remove" asp-route-Id="@Model[i].Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <hr />

                            orderTotal += Model[i].Price * Model[i].TempSqFt;
                        }


