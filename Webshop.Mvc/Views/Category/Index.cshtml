@model IEnumerable<Category>

@{ 
    ViewData["Title"] = "Categories";
    ViewData["SubTitle"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category">
                <i class="fas fa-plus"></i> &nbsp;
                Create new category
            </a>
        </div>

    </div>
    <br />
    <br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <caption>List of categories</caption>
            <thead class="thead-dark">
                <tr>
                    <th>Category name</th>
                    <th>Display order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-Id="@category.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@category.Id"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
       <p>No category exists</p>
    }
</div>

